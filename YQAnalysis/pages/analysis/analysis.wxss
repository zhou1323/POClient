/* pages/analysis/analysis.wxss */
.body{
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: #f6f8f8;
  width: 100vw
}

.info{
  height: 12vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  border: #e8e9e9 1rpx solid;
  border-radius: 10rpx;
  margin: 1vh;
  background-color: white
}

.keyword{
  display: flex;
  flex-direction: column;
  width: 40%;
  font-size: 30rpx;
  align-items: center;
  justify-content: center
}
.subscribed-btn,.no-subscribed-btn{
  line-height: 4vh;
  height: 4vh;
  width: 24vw;
  font-size: 24rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
  display: table;
  background-color: #315BA7;
  color: white
}
.subscribed-btn text,.no-subscribed-btn text{
  vertical-align: middle
}
.brief-info{
  width: 55%;
  font-size: 26rpx;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center
}
/*选项卡相关*/
.content{
  margin: 1vh;
}
.tab-nav{
  width: 100%;
  height: 6vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  background-color: white
}
.tab-item{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center
}
.tab-item.active{
  border-bottom: 2rpx #315BA7 solid
}

/*舆情分析选项卡*/
.yq-analysis{
  display: flex;
  flex-direction: column;
  height: 75vh;
   /* overflow: scroll  */
}
.yq-item{
  width: 100%;
  margin-top: 1vh;
  background-color: white;
}
/* 情感分析 */
.yq-item-hd{
  height: 6vh;
  line-height: 6vh;
  background: #315BA7;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  text-align: center;
  color: white;
  font-size: 35rpx;
  font-weight: bold
}
.yq-item-bd{
  display: flex;
  justify-content: center;
  align-content: center;
}
.yq-item-bd-content{
  width: 90%;
  font-size: 30rpx;
}

